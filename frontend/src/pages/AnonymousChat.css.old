/* src/pages/AnonymousChat.css */

.anon-container {
    display: flex;
    flex-direction: column;
    height: 100vh;
    background-color: #fafafa;
  }
  
  /* Barra de login/register no topo (abaixo do header) */
  .anon-topbar {
    display: flex;
    justify-content: flex-end;
    padding: 8px 16px;
    background-color: #f0f0f0;
    border-bottom: 1px solid #ddd;
  }
  
  .topbar-btn {
    margin-left: 10px;
    text-decoration: none;
    color: #fff;
    background-color: #4caf50;
    padding: 6px 12px;
    border-radius: 4px;
    font-size: 14px;
  }
  
  .topbar-btn:hover {
    background-color: #45a049;
  }
  
  /* Wrapper do chat centralizado e ~70% de largura */
  .anon-chat-wrapper {
    width: 70%;
    margin: 20px auto;
    display: flex;
    flex-direction: column;
    flex: 1;
    border: 1px solid #ddd;
    border-radius: 8px;
    background-color: #fff;
    overflow: hidden;
  }
  
  .anon-messages {
    flex: 1;
    padding: 16px;
    overflow-y: auto;
    background-color: #fafafa;
    display: flex;
    flex-direction: column;
  }
  
  .anon-message {
    display: flex;
    margin-bottom: 10px;
    max-width: 70%;
  }
  
  /* Avatares */
  .anon-avatar {
    width: 40px;
    height: 40px;
    margin: 0 8px;
  }
  .anon-avatar img {
    width: 100%;
    height: 100%;
    border-radius: 50%;
    object-fit: cover;
  }
  
  /* Alinhamento user x assistant */
  .anon-user {
    margin-left: auto;
    justify-content: flex-end;
    flex-direction: row-reverse; /* avatar do outro lado */
  }
  
  .anon-assistant {
    margin-right: auto;
    justify-content: flex-start;
  }
  
  /* Balões */
  .anon-bubble {
    background-color: #e0e0e0;
    padding: 10px;
    border-radius: 8px;
    line-height: 1.4;
    white-space: pre-wrap;
  }
  
  .anon-user .anon-bubble {
    background-color: #cef0ff;
    color: #222;
    border-top-right-radius: 0;
  }
  
  .anon-assistant .anon-bubble {
    background-color: #e0e0e0;
    color: #333;
    border-top-left-radius: 0;
  }
  
  /* Área de input */
  .anon-input-container {
    display: flex;
    gap: 8px;
    padding: 16px;
    border-top: 1px solid #ddd;
    background-color: #f7f7f7;
  }
  
  .anon-input {
    flex: 1;
    resize: none;
    border-radius: 6px;
    padding: 8px;
    font-size: 14px;
    border: 1px solid #ccc;
    outline: none;
  }
  
  .anon-send-btn {
    background-color: #4caf50;
    color: #fff;
    border: none;
    border-radius: 6px;
    padding: 0 16px;
    font-size: 14px;
    cursor: pointer;
  }
  
  .anon-send-btn:hover {
    background-color: #45a049;
  }
  

  
  .markdown-content {
    /* Define altura de linha menor */
    line-height: 1.0; 
    /* Se quiser remover margens externas padrão */
    margin: 0;
  }
  
  /* Ajustar parágrafos para reduzir margens entre eles */
  .markdown-content p {
    margin: 0 0 0.3em; /* Exemplo: reduz distância entre parágrafos */
    /* ou margin: 0; para zero de margem */
  }
  
  /* Ajustar listas, cabeçalhos, etc. conforme necessidade */
  .markdown-content ul, .markdown-content ol {
    margin: 0 0 0.2em;
  }
  .markdown-content h1, .markdown-content h2, .markdown-content h3 {
    margin: 0.3em 0;
  }
  