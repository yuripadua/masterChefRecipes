/* src/pages/MainChat.css */

.mainchat-container {
    display: flex;
    height: 100vh;
    background-color: #f5f5f5;
  }
  
  /* SIDEBAR */
  .sidebar {
    width: 260px;
    background-color: #fff;
    border-right: 1px solid #ddd;
    display: flex;
    flex-direction: column;
  }
  
  .sidebar-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 12px 16px;
    background-color: #efefef;
    border-bottom: 1px solid #ddd;
  }
  
  .sidebar-btn {
    background-color: #555;
    color: #fff;
    border: none;
    border-radius: 4px;
    padding: 6px 12px;
    cursor: pointer;
  }
  .sidebar-btn:hover {
    background-color: #444;
  }
  
  .newchat-btn {
    background-color: #4caf50;
    color: #fff;
    margin: 12px 16px 0 16px;
    border: none;
    border-radius: 4px;
    padding: 8px;
    cursor: pointer;
  }
  .newchat-btn:hover {
    background-color: #45a049;
  }
  
  .chat-list {
    flex: 1;
    overflow-y: auto;
    margin-top: 8px;
  }
  
  .chat-item {
    padding: 12px 16px;
    cursor: pointer;
    border-bottom: 1px solid #eee;
  }
  .chat-item:hover {
    background-color: #f9f9f9;
  }
  .chat-item.active {
    background-color: #ddeffd;
  }
  
  /* √ÅREA DE CHAT */
  .chat-area {
    flex: 1;
    display: flex;
    flex-direction: column;
  }
  
  .chat-messages {
    flex: 1;
    padding: 16px;
    overflow-y: auto;
    background-color: #fafafa;
  }
  
  .message {
    display: flex;
    margin-bottom: 10px;
    max-width: 60%;
  }
  
  .message-user {
    margin-left: auto;
    justify-content: flex-end;
  }
  
  .message-assistant {
    margin-right: auto;
    justify-content: flex-start;
  }
  
  .message-bubble {
    background-color: #e0e0e0;
    padding: 10px 14px;
    border-radius: 8px;
    line-height: 1.4;
    white-space: pre-wrap;
  }
  
  .message-user .message-bubble {
    background-color: #cef0ff;
    color: #222;
    border-top-right-radius: 0;
  }
  
  .message-assistant .message-bubble {
    background-color: #e0e0e0;
    color: #333;
    border-top-left-radius: 0;
  }
  
  .chat-input-container {
    display: flex;
    gap: 8px;
    padding: 16px;
    border-top: 1px solid #ddd;
    background-color: #fff;
  }
  
  .chat-input {
    flex: 1;
    resize: none;
    border-radius: 6px;
    padding: 8px;
    font-size: 14px;
    border: 1px solid #ccc;
    outline: none;
  }
  
  .chat-send-btn {
    background-color: #4caf50;
    color: #fff;
    border: none;
    border-radius: 6px;
    padding: 0 16px;
    font-size: 14px;
    cursor: pointer;
  }
  
  .chat-send-btn:hover {
    background-color: #45a049;
  }
  
  .no-chat-selected {
    flex: 1;
    display: flex;
    align-items: center;
    justify-content: center;
    font-style: italic;
  }
  