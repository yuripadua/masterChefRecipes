/* ChatBot.css */
.chat-container {
    display: flex;
    flex-direction: column;
    flex: 1;
    height: 100%;
    background-color: #fff;
    border-left: 1px solid #ddd; /* Caso queira borda se tiver sidebar */
  }
  
  /* HEADER BAR */
  .chat-header {
    display: flex;
    align-items: center;
    background-color: #f3f3f3;
    padding: 8px 16px;
    border-bottom: 1px solid #ddd;
  }
  
  .chat-header .header-avatar {
    width: 40px;
    height: 40px;
    border-radius: 50%;
    margin-right: 12px;
  }
  
  /* TITULO DO HEADER */
  .chat-header h2 {
    margin: 0;
    font-size: 18px;
    font-weight: normal;
  }
  
  /* AREA DE MENSAGENS */
  .chat-messages {
    flex: 1;
    padding: 16px;
    overflow-y: auto;
    background-color: #fafafa;
  }
  
  /* BLOCO DE MENSAGEM */
  .message {
    display: flex;
    margin-bottom: 12px;
    max-width: 80%; /* Para não ultrapassar a tela */
  }
  
  /* Para alinhar mensagens do usuário à direita */
  .message-user {
    margin-left: auto; /* empurra para a direita */
    flex-direction: row-reverse; /* avatar depois do bubble */
  }
  
  /* Bolha do assistente (fica a esquerda) */
  .message-assistant {
    margin-right: auto; /* empurra para a esquerda */
  }
  
  /* AVATAR AO LADO DA MENSAGEM */
  .message-avatar {
    width: 40px;
    height: 40px;
    margin: 0 8px;
  }
  
  .message-avatar img {
    width: 100%;
    height: 100%;
    border-radius: 50%;
    object-fit: cover; /* se a imagem não for quadrada */
  }
  
  /* ESTILO DA BOLHA DE MENSAGEM */
  .message-bubble {
    background-color: #e0e0e0;
    padding: 10px 14px;
    border-radius: 10px;
    font-size: 14px;
    line-height: 1.4;
    white-space: pre-wrap;
  }
  
  /* Ajuste para USER x ASSISTANT */
  .message-user .message-bubble {
    background-color: #cef0ff;
    color: #222;
    border-top-right-radius: 0;
  }
  
  .message-assistant .message-bubble {
    background-color: #e0e0e0;
    color: #333;
    border-top-left-radius: 0;
  }
  
  /* ÁREA DE INPUT */
  .chat-input-container {
    display: flex;
    gap: 8px;
    padding: 8px 16px;
    border-top: 1px solid #ddd;
    background-color: #f7f7f7;
  }
  
  .chat-input {
    flex: 1;
    resize: none;
    border-radius: 6px;
    padding: 8px;
    font-size: 14px;
    border: 1px solid #ccc;
    outline: none;
  }
  
  .chat-send-btn {
    background-color: #4caf50;
    color: #fff;
    border: none;
    border-radius: 6px;
    padding: 0 16px;
    font-size: 14px;
    cursor: pointer;
  }
  
  .chat-send-btn:hover {
    background-color: #45a049;
  }
  

  

  .markdown-content {
    /* Define altura de linha menor */
    line-height: 1.0; 
    /* Se quiser remover margens externas padrão */
    margin: 0;
  }
  
  /* Ajustar parágrafos para reduzir margens entre eles */
  .markdown-content p {
    margin: 0 0 0.3em; /* Exemplo: reduz distância entre parágrafos */
    /* ou margin: 0; para zero de margem */
  }
  
  /* Ajustar listas, cabeçalhos, etc. conforme necessidade */
  .markdown-content ul, .markdown-content ol {
    margin: 0 0 0.2em;
  }
  .markdown-content h1, .markdown-content h2, .markdown-content h3 {
    margin: 0.3em 0;
  }
  