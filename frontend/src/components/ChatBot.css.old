/* ChatBot.css */
.chat-container {
    display: flex;
    flex-direction: column;
    flex: 1; /* Para ocupar espaço total */
    height: 0%;
  }
  
  .chat-messages {
    flex: 1; 
    padding: 16px;
    overflow-y: auto;
    background-color: #fafafa;
  }
  
  .message {
    display: flex;
    margin-bottom: 10px;
  }
  
  .message-user {
    justify-content: flex-end;
  }
  
  .message-assistant {
    justify-content: flex-start;
  }
  
  .message-bubble {
    max-width: 60%;
    padding: 10px 14px;
    border-radius: 8px;
    font-size: 14px;
    line-height: 1.5;
    white-space: pre-wrap;
    background-color: #e0e0e0; /* default bubble color */
  }
  
  .message-user .message-bubble {
    background-color: #cef0ff;
    color: #222;
    border-top-right-radius: 0;
  }
  
  .message-assistant .message-bubble {
    background-color: #e0e0e0;
    color: #333;
    border-top-left-radius: 0;
  }
  
  .chat-input-container {
    display: flex;
    gap: 8px;
    padding: 16px;
    border-top: 1px solid #ddd;
    background-color: #f7f7f7;
  }
  
  .chat-input {
    flex: 1;
    resize: none;
    border-radius: 6px;
    padding: 8px;
    font-size: 14px;
    border: 1px solid #ccc;
    outline: none;
  }
  
  .chat-send-btn {
    background-color: #4caf50;
    color: #fff;
    border: none;
    border-radius: 6px;
    padding: 0 16px;
    font-size: 14px;
    cursor: pointer;
  }
  
  .chat-send-btn:hover {
    background-color: #45a049;
  }
  

  .markdown-content {
    /* Define altura de linha menor */
    line-height: 1.0; 
    /* Se quiser remover margens externas padrão */
    margin: 0;
  }
  
  /* Ajustar parágrafos para reduzir margens entre eles */
  .markdown-content p {
    margin: 0 0 0.3em; /* Exemplo: reduz distância entre parágrafos */
    /* ou margin: 0; para zero de margem */
  }
  
  /* Ajustar listas, cabeçalhos, etc. conforme necessidade */
  .markdown-content ul, .markdown-content ol {
    margin: 0 0 0.2em;
  }
  .markdown-content h1, .markdown-content h2, .markdown-content h3 {
    margin: 0.3em 0;
  }
  