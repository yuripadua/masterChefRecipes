/* Sidebar.css */
.sidebar {
    width: 240px;
    background-color: #f2f2f2;
    height: 100%;
    transition: transform 0.3s ease;
    box-shadow: 2px 0px 6px rgba(0,0,0,0.1);
    position: relative;
  }
  
  .sidebar-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 16px;
    background-color: #ddd;
  }
  
  .sidebar-header h2 {
    margin: 0;
    font-size: 18px;
  }
  
  .close-btn {
    background: none;
    border: none;
    font-size: 24px;
    cursor: pointer;
  }
  
  .sidebar-content {
    padding: 16px;
    overflow-y: auto; /* se tiver muitos históricos */
  }
  
  .history-item {
    background-color: #fff;
    padding: 8px;
    margin-bottom: 8px;
    border-radius: 6px;
    cursor: pointer;
    transition: background-color 0.2s;
  }
  
  .history-item:hover {
    background-color: #eee;
  }
  
  /* Por padrão, no mobile, vamos "esconder" a sidebar movendo-a para fora da tela */
  @media (max-width: 768px) {
    .sidebar {
      position: absolute;
      top: 0;
      left: 0;
      transform: translateX(-100%); /* sidebar fica oculta */
      z-index: 998;
    }
  
    /* Quando estiver "open" */
    .sidebar.open {
      transform: translateX(0);
    }
  }
  